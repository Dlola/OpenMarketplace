<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service class="BitBag\OpenMarketplace\Component\Core\Api\EventSubscriber\VendorSlugEventSubscriber"
                 id="bitbag.open_marketplace.api.event_subscriber.vendor_slug">
            <argument type="service" id="bitbag.open_marketplace.component.vendor.generator.slug" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service class="BitBag\OpenMarketplace\Component\Core\Api\EventSubscriber\VendorAwareEventSubscriber"
                 id="bitbag.open_marketplace.api.event_subscriber.vendor_aware">
            <argument type="service" id="bitbag.open_marketplace.api.context.vendor_context" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service class="BitBag\OpenMarketplace\Component\Core\Api\Doctrine\ORM\Subscriber\UuidSubscriber"
                 id="bitbag.open_marketplace.doctrine.orm.subscriber.uuid">
            <argument type="service" id="bitbag.open_marketplace.ramsey.uuid_doctrine.uuid_generator" />
            <tag name="doctrine.event_subscriber" />
        </service>
    </services>
</container>
