<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="BitBag\OpenMarketplace\Component\Settlement\Entity\Settlement" table="bitbag_open_marketplace_settlement">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="status" type="string"  />
        <field name="totalAmount" type="integer" />
        <field name="totalCommissionAmount" type="integer" />
        <field name="totalProfit" type="integer" />

        <many-to-one field="vendor" target-entity="BitBag\OpenMarketplace\Component\Vendor\Entity\VendorInterface" inversed-by="settlements">
            <join-column name="vendor_id" referenced-column-name="id" on-delete="CASCADE" />
        </many-to-one>

        <one-to-many field="orders" target-entity="BitBag\OpenMarketplace\Component\Order\Entity\Order" mapped-by="settlement">
        </one-to-many>
    </mapped-superclass>
</doctrine-mapping>
