<?xml version="1.0" encoding="UTF-8"?>

<constraint-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
                    http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">
    <class name="Sylius\Component\Core\Model\ProductVariant">
        <property name="onHand">
            <constraint name="LessThanOrEqual">
                <option name="value">1000000000</option>
                <option name="groups">
                    <value>sylius</value>
                </option>
            </constraint>
        </property>
    </class>
</constraint-mapping>
