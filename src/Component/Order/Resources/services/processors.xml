<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="false" autoconfigure="false" />

        <service id="bitbag.open_marketplace.component.order.processor.split_order_by_vendor"
                 class="BitBag\OpenMarketplace\Component\Order\Processor\SplitOrderByVendorProcessor"
        >
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument type="service" id="bitbag.open_marketplace.component.order.order_manager"/>
            <argument type="service" id="bitbag.open_marketplace.component.order.refresher.payment"/>
            <argument type="service" id="event_dispatcher" />
        </service>

        <service id="bitbag.open_marketplace.component.order.processor.order_shipment_by_vendor"
                 class="BitBag\OpenMarketplace\Component\Order\Processor\OrderShipmentByVendorProcessor"
                 decorates="sylius.order_processing.order_shipment_processor"
        >
            <argument type="service" id="bitbag.open_marketplace.component.order.factory.shipment" />
            <argument type="service" id="bitbag.open_marketplace.component.order.calculator.shipment_units_recalculator" />
        </service>
    </services>
</container>
