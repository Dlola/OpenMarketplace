<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="BitBag\OpenMarketplace\Entity\VendorSettlement" table="bitbag_open_marketplace_vendor_settlement">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="commission" column="commission" type="integer" />
        <field name="commissionType" column="commission_type" type="string" />

        <one-to-one field="vendor" target-entity="BitBag\OpenMarketplace\Entity\Vendor" >
            <join-column name="vendor_id" referenced-column-name="id"/>
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-one>
    </mapped-superclass>
</doctrine-mapping>
